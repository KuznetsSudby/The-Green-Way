<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/closeButton"
        style="@style/CloseButton.Right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:text="@string/ui_route_filters"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/closeButton"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="logo,title" />

    <FrameLayout
        android:id="@+id/lineTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/barrier" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/lineTop">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rangeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/ui_range_filter"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.mohammedalaa.seekbar.DoubleValueSeekBarView
                android:id="@+id/range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/rangeTitle"
                app:r2CurrentMaxValue="140"
                app:r2CurrentMinValue="30"
                app:r2barHeight="8dp"
                app:r2baseColor="@color/colorDivider"
                app:r2circleFillColor="@color/colorAccent"
                app:r2circleRadius="12dp"
                app:r2circleTextColor="@color/white"
                app:r2circleTextSize="12sp"
                app:r2fillColor="@color/grayLight"
                app:r2maxValue="150"
                app:r2maxValueStep="1"
                app:r2minValue="15"
                app:r2minValueStep="1" />

            <TextView
                android:id="@+id/filterTypeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/ui_type_filter"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/range" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filterType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="0dp"
                app:layout_constraintEnd_toEndOf="@+id/filterTypeTitle"
                app:layout_constraintStart_toStartOf="@+id/filterTypeTitle"
                app:layout_constraintTop_toBottomOf="@+id/filterTypeTitle"/>

            <TextView
                android:id="@+id/typeHint"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/space.4"
                app:layout_constraintTop_toBottomOf="@+id/filterType"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/ui_type_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/filterCategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/ui_category_filter"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/typeHint" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filterCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="0dp"
                app:layout_constraintEnd_toEndOf="@+id/filterCategoryTitle"
                app:layout_constraintStart_toStartOf="@+id/filterCategoryTitle"
                app:layout_constraintTop_toBottomOf="@+id/filterCategoryTitle"/>

            <TextView
                android:id="@+id/categoryHint"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/space.4"
                app:layout_constraintTop_toBottomOf="@+id/filterCategory"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/ui_type_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/filterAvailabilityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/ui_availability_filter"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/categoryHint" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filterAvailability"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="0dp"
                app:layout_constraintEnd_toEndOf="@+id/filterAvailabilityTitle"
                app:layout_constraintStart_toStartOf="@+id/filterAvailabilityTitle"
                app:layout_constraintTop_toBottomOf="@+id/filterAvailabilityTitle"/>

            <TextView
                android:id="@+id/availabilityHint"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/space.4"
                app:layout_constraintTop_toBottomOf="@+id/filterAvailability"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/ui_availability_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toTopOf="@+id/saveButton" />

    <TextView
        android:id="@+id/clearButton"
        style="@style/BaseButton.Additional"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/ui_clear_filters"
        app:layout_constraintBottom_toBottomOf="@+id/saveButton"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/saveButton" />

    <TextView
        android:id="@+id/saveButton"
        style="@style/BaseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/ui_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clearButton" />

</androidx.constraintlayout.widget.ConstraintLayout>